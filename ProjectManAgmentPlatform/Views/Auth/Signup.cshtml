@model ProjectManAgmentPlatform.Models.User

@{
    ViewBag.Title = "title";
    Layout = "/Views/Shared/_Layout.cshtml";
}


<div class="container  " style="margin-top : 5%" >

	<div class ="col-md-4 col-md-offset-4" >
        
		<form class="form-signin form-control-lg  ">
    
			<h2 class="form-signin-heading"></h2>
			
			<label for="inputEmail" class="sr-only " style="margin-top : 5%">Email address</label>
			<input type="email" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="" style="margin-top: 5%;min-width: 100%!important;">
        
			<label for="FullName" class="sr-only" style="margin-top : 5%">Full Name</label>
			<input type="FullName" id="inputEmail" class="form-control" placeholder="FullName" required="" autofocus="" style="margin-top: 5%;min-width: 100%!important;">

			<label for="UserName" class="sr-only" style="margin-top : 5%">UserName </label>
			<input type="text" id="UserName" class="form-control" placeholder="UserName " required="" autofocus="" style="margin-top: 5%;min-width: 100%!important;">

			<label for="Phone" class="sr-only" style="margin-top : 5%">Phone  </label>
			<input type="Phone" id="Phone" class="form-control" placeholder="Phone " required="" autofocus="" style="margin-top: 5%;min-width: 100%!important;">

			<label for="UserName" class="sr-only" style="margin-top : 5%">UserName </label>
			<input type="UserName" id="UserName" class="form-control" placeholder="UserName " required="" autofocus="" style="margin-top: 5%;min-width: 100%!important;">

				
			<label for="inputPassword" class="sr-only" style="margin-top : 5%">Password</label>
			<input type="password" id="inputPassword" class="form-control" placeholder="Password" required="" style="margin-top: 5%;min-width: 100%!important;" >
			
			<label for="inputPassword" class="sr-only " style="margin-top : 5%">Confirm Password</label>
			<input type="password" id="inputConfirmPassword" class="form-control" placeholder="ConfirmPassword" required="" style="margin-top: 5%; min-width: 100%!important;">

			
			
			
			<button class="btn  btn-primary btn-lg btn-block active " type="submit" style="margin-top: 5%; ">Sign Up</button>
        
		</form>
	</div>
</div>